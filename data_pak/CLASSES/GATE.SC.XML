<class id="Gate" cpp_class="CVXGate" parent="Building">

	<method sig="idle" vs="data/subai/gate_idle.vs"/>
	<method sig="open" vs="data/subai/gate_open.vs"/>
	<method sig="close" vs="data/subai/gate_close.vs"/>
	<method sig="open_permanent" vs="data/subai/gate_open_permanent.vs"/>
	<method sig="close_permanent" vs="data/subai/gate_close_permanent.vs"/>

	<properties icon="gameres/icons/GGates.bmp"/>
	<properties target_priority="200"/>
	<properties display_name="Gate"/>
	<properties auto_repair="no"/>
	<properties help="/contents/buildings/Fortification"/>

	<value0
		icon="gameres/infobar/common/pop ico.bmp"
		script="Settlement set; set = .AsBuilding.settlement; return set.population + ' / ' + set.max_population;"
		flags="-1"
		help="/contents/resources"/>
	<value1
		icon="gameres/infobar/common/gold ico.bmp"
		script="return .AsBuilding.settlement.gold;"
		flags="5"
		help="/contents/resources"/>
	<value2
		icon="gameres/infobar/common/food ico.bmp"
		script="return .AsBuilding.settlement.food;"
		flags="5"
		help="/contents/resources"/>
	<value3
		icon="gameres/infobar/common/Loyality.bmp"
		script="return .AsBuilding.settlement.loyalty;"
		flags="-1"
		help="/contents/capturing"/>


</class>
