	<properties water_unit="0"/>

	<properties feeds           ="1"/>
	<properties damaged_by_ghost="1"/>
	<properties can_be_invisible="1"/>

	<properties interface="items"/>

	<value0
		icon="gameres/infobar/common/level ico.bmp"
		script="return .AsUnit.level;"
		help="/contents/stats/level"/>
	<value1
		icon="gameres/infobar/common/attack ico.bmp"
		script="return .AsUnit.minattack + '-' + .AsUnit.maxattack;"
		help="/contents/stats/attack"/>
	<value2
		icon="gameres/infobar/common/defense ico.bmp"
		script="return .AsUnit.defense_slash + '/' + .AsUnit.defense_pierce;"
		help="/contents/stats/defense"/>
	<value3
		icon="gameres/infobar/common/food ico.bmp"
		script="return .AsUnit.food + '/20';"
		help="/contents/feeding"/>


  <defaultcmd target="">
    <cmd name="move"/>
    <cmd name="advance" ctrl="1"/>
  </defaultcmd>

  <defaultcmd target="Inn">
	<cmd name="transport"/>
	<cmd name="approach"/>
  </defaultcmd>


