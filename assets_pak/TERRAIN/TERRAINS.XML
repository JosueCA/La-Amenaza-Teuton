	<layer 
		z="12" type="4" display="Shallow water" dark="1" 
		image="assets/terrain/swater.vq" 
		minimap="swater.bmp"
		frames="10"
		transition_terrain="10" animate_transition="1" 
		transition="2"
		/>
	<layer 
		z="13" type="4" display="Water" dark="1"
		image="assets/terrain/dwater.vq" 
		minimap="dwater.bmp" 
